import sqlite3

try:
    conexao = sqlite3.connect("invecao_do_mal.db")
    cursor = conexao.cursor()

    cursor.execute("""CREATE TABLE IF NOT EXISTS jogadores (
        id_jogador INT PRIMARY KEY,
        nome VARCHAR(50),
        idade INT,
        email VARCHAR(100)
    )""")

    cursor.execute("""CREATE TABLE IF NOT EXISTS personagens (
        id_personagem INT PRIMARY KEY,
        nome VARCHAR(50),
        id_jogador INT,
        idade INT
    )""")

    cursor.execute("""CREATE TABLE IF NOT EXISTS itens (
        id_item INT PRIMARY KEY,
        nome VARCHAR(50),
        tipo VARCHAR(30)
    )""")

    cursor.execute("""CREATE TABLE IF NOT EXISTS ambiente (
        id_ambiente INT PRIMARY KEY,
        local VARCHAR(50),
        descricao VARCHAR(100)
    )""")

    cursor.execute("""CREATE TABLE IF NOT EXISTS jogo (
        id_jogo INT PRIMARY KEY,
        nome VARCHAR(50),
        tema VARCHAR(30)
    )""")

    cursor.execute("""CREATE TABLE IF NOT EXISTS objetivo (
        id_objetivo INT PRIMARY KEY,
        descricao VARCHAR(100)
    )""")

    conexao.commit()
    print("Tabelas criadas com sucesso!")

except sqlite3.Error as erro:
    print("Erro ao criar o banco:", erro)

finally:
    if conexao:
        conexao.close()